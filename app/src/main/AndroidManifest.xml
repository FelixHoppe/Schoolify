<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.felix_h.schulify">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/title"
        android:label="@string/app_name"
        android:roundIcon="@drawable/title"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomeAct"
            android:icon="@drawable/title"
            android:label="Schulify"
            android:screenOrientation="portrait"/>
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".noten"  android:label="Noten" android:screenOrientation="portrait"/>
        <activity android:name=".stundenplan"  android:label="Stundenplan" android:screenOrientation="portrait"/>
        <activity android:name=".hausaufgaben"  android:label="Hausaufgaben" android:screenOrientation="portrait"/>
        <activity android:name=".info"  android:label="Info" android:screenOrientation="portrait"/>
        <activity android:name=".statistiken"  android:label="Statistiken" android:screenOrientation="portrait"/>
        <activity android:name=".Jahr"  android:label="@string/app_name" android:screenOrientation="portrait"/>
        <activity android:name=".NotenAuswahl"  android:label="@string/app_name" android:screenOrientation="portrait"/>
        <activity android:name=".einstellungen"  android:label="Einstellungen" android:screenOrientation="portrait"/>

    </application>

</manifest>