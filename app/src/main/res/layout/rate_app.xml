<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Hey :D
\nGefällt dir meine App?"
        android:textAlignment="center"
        android:textColor="@color/black_de"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/rate_textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/gefällt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-152dp"
        android:layout_weight="1"
        android:text="
\nWenn ja, nimm dir bitte 10 Sekunden Zeit, sie zu bewerten, da mir jede einzelne Bewertung hilft, diese App zu verbreiten!
\n
        "
        android:textAlignment="center"
        android:textColor="@color/black_de"
        android:textSize="15sp" />

    <Button
        android:id="@+id/gefällt"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:background="@color/colorActionBar"
        android:text="Mir gefällt deine App" />

    <Button
        android:id="@+id/gefällt_nicht"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:background="@color/color3"
        android:text="Deine App gefällt mir nicht" />

    <Button
        android:id="@+id/später"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="262dp"
        android:background="@color/colorAccent"
        android:text="Vielleicht später" />

</RelativeLayout>